<UserControl x:Class="ChatBox.View.Components.Output"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatBox.View.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FlowDirection="LeftToRight">
    <Grid>

        <Border CornerRadius="10" 
                BorderBrush="Black" 
                BorderThickness="0" 
                Padding="5" 
                Background="#FFE6DADA" 
                Height="auto" 
                Width="auto" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                RenderTransformOrigin="1.392,0.457" 
                Margin="1,1,0,0">
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14" Width="Auto" MaxWidth="265" Text="{Binding Message}" TextWrapping="Wrap" />
        </Border>

    </Grid>
</UserControl>
